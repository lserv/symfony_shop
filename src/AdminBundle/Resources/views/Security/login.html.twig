{% extends 'AdminBundle::base_fos.html.twig' %}

{% block content %}
    <div class="row">
        <div class="center-block" style="width:600px;">
            <h2 class="form-signin-heading">Please sign in</h2>
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin form-horizontal">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="login">Username</label>
                    <div class="col-sm-10">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email address" class="form-control" required autofocus />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="password">Password</label>
                    <div class="col-sm-10">
                        <input type="password" id="password" name="_password" class="form-control" placeholder="Password" required />
                    </div>
                </div>
                <input type="submit"
                       class="btn btn-lg btn-primary btn-block"
                       id="_submit"
                       name="_submit"
                       value="Login" />
            </form>
        </div>
    </div>
{% endblock %}